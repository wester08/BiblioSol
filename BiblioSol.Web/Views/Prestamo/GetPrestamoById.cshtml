@model BiblioSol.Shared.Dtos.PrestamosDtos.PrestamoDto

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<h2 class="mb-4 text-primary">Detalles del Préstamo</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.idPrestamo</dd>

            <dt class="col-sm-4">Cliente</dt>
            <dd class="col-sm-8">@Model.nombreCliente</dd>

            <dt class="col-sm-4">Libro ID</dt>
            <dd class="col-sm-8">@Model.libroId</dd>

            <dt class="col-sm-4">Fecha Compromiso</dt>
            <dd class="col-sm-8">@Model.fechaCompromiso.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Fecha Devolución</dt>
            <dd class="col-sm-8">@Model.fechaDevolucion?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Días Retraso</dt>
            <dd class="col-sm-8">@Model.diasRetraso</dd>

            <dt class="col-sm-4">Monto</dt>
            <dd class="col-sm-8">@Model.monto.ToString("C")</dd>

            <dt class="col-sm-4">Penalizado</dt>
            <dd class="col-sm-8">
                @if (Model.penalizado)
                {
                        <span class="badge bg-danger">Sí</span>
                }
                else
                {
                        <span class="badge bg-success">No</span>
                }
            </dd>

            <dt class="col-sm-4">Estado ID</dt>
            <dd class="col-sm-8">@Model.estadoId</dd>

            <dt class="col-sm-4">Fecha Creación</dt>
            <dd class="col-sm-8">@Model.fechaCreacion.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-4">Usuario Creador</dt>
            <dd class="col-sm-8">@Model.usuarioCreacionId</dd>

            <dt class="col-sm-4">Fecha Modificación</dt>
            <dd class="col-sm-8">@Model.fechaMod?.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-4">Usuario Modificador</dt>
            <dd class="col-sm-8">@Model.usuarioMod</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(Model.active ? "success" : "secondary")">
                    @(Model.active ? "Activo" : "Inactivo")
                </span>
            </dd>
        </dl>
    </div>
</div>

<div>
    <a asp-action="GetAllPrestamos" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Volver al listado
    </a>
</div>
