@model IEnumerable<BiblioSol.Shared.Dtos.PrestamosDtos.PrestamoDto>

@{
    ViewData["Title"] = "Listado de Préstamos";
}

<div class="container-fluid px-4 py-3"> <!-- Espacio alrededor -->
    <div class="text-start mb-3">
        <h2 class="mb-4 text-primary">Listado de Préstamos</h2>

        <div class="d-flex gap-2 flex-wrap">
            <a asp-action="AddPrestamo" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nuevo Préstamo
            </a>
            <a asp-action="AddSolicitudPrestamo" class="btn btn-info text-white">
                <i class="bi bi-file-earmark-plus"></i> Nueva Solicitud
            </a>
            <a asp-action="FormSearchByIdPrestamo" class="btn btn-outline-primary">
                <i class="bi bi-search"></i> Buscar por ID
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped shadow-sm">
            <thead style="background-color: #cce5ff;">
                <tr class="text-nowrap">
                    <th>@Html.DisplayNameFor(model => model.First().idPrestamo)</th>
                    <th>@Html.DisplayNameFor(model => model.First().nombreCliente)</th>
                    <th>@Html.DisplayNameFor(model => model.First().libroId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().fechaCompromiso)</th>
                    <th>@Html.DisplayNameFor(model => model.First().fechaDevolucion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().diasRetraso)</th>
                    <th>@Html.DisplayNameFor(model => model.First().monto)</th>
                    <th>@Html.DisplayNameFor(model => model.First().penalizado)</th>
                    <th>@Html.DisplayNameFor(model => model.First().estadoId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().fechaCreacion)</th>
                    <th>@Html.DisplayNameFor(model => model.First().usuarioCreacionId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().fechaMod)</th>
                    <th>@Html.DisplayNameFor(model => model.First().usuarioMod)</th>
                    <th>@Html.DisplayNameFor(model => model.First().active)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr class="text-nowrap">
                            <td>@item.idPrestamo</td>
                            <td class="text-truncate" style="max-width: 200px;">@item.nombreCliente</td>
                            <td>@item.libroId</td>
                            <td>@item.fechaCompromiso.ToString("yyyy-MM-dd")</td>
                            <td>@item.fechaDevolucion?.ToString("yyyy-MM-dd")</td>
                            <td>@item.diasRetraso</td>
                            <td>@item.monto.ToString("C")</td>
                            <td>@(item.penalizado ? "Sí" : "No")</td>
                            <td>@item.estadoId</td>
                            <td>@item.fechaCreacion.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.usuarioCreacionId</td>
                            <td>@item.fechaMod?.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@item.usuarioMod</td>
                            <td>
                                <span class="badge bg-@(item.active ? "success" : "secondary")">
                                @(item.active ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td>
                                <a asp-action="UpdatePrestamoById" asp-route-id="@item.idPrestamo" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
