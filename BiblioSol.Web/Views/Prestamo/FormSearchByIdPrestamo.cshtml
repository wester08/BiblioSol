@{
    ViewData["Title"] = "Buscar préstamo por ID";
}

<h2 class="mb-4 text-primary">Buscar Préstamo por ID</h2>

<form asp-action="GetPrestamoById" method="get" class="border p-4 rounded shadow-sm bg-light col-md-6">
    <div class="mb-3">
        <label for="id" class="form-label fw-bold">ID del Préstamo</label>
        <input type="number" class="form-control" name="id" id="id" placeholder="Ej. 101" required />
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="GetAllPrestamos" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver a la lista
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
    </div>
</form>
